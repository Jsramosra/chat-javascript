<div class="card col-md-4 mt-5 mx-auto" id="nickWrap">
    <div class="card-header">
        <h3>Enter Your username</h3>
    </div>
    <div class="card-body">
        <p id="nickError" ></p>
        <form action="" id="nickForm" >
            <input type="text"  id="nickname" class="form-control">
            <input type="submit" class="btn btn-warning btn-block mt-2" value="Send">
        </form>
    </div>
</div>

<div class="container" id="contentWrap">
    <div class="row">
    <div class="col-md-6 offset-md-1 mt-4">
        <div class="card">
            <div class="card-header">
                <h4>Lets chat</h4>
            </div>
            <div id="chat" class="card-body">
            </div>
            
            <form class="card-footer"  id="message-form">
                <div class="input-group">
                    <input class="form-control" type="text" id="message">
                <div class="input-group-append">
                    <input type="submit" value="Send" class="btn btn-warning" >
                </div>
                </div>
                
            </form> 
        </div>
    </div>
    <div class="col-md-3 mt-4">
        <div class="card">
        <div class="card-header">
            <h3>
                Users
            </h3>
        </div>
        <div class="card-body">
            <div id="usernames"></div>
        </div>
        </div>
    </div>
    </div>
</div>
